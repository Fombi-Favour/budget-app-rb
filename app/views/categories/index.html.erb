<header>
  <nav>
    <h3>PennyWise</h3>
    <p>categories</p>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn-out" %>
  </nav>
</header>

<section class="main-page">
  <div class="section-list">
    <% if @categories.empty? %>
      <p>No categories. Create one now!!!</p>
    <% else %>
      <ul>
        <% @categories.each do |category| %>
          <%= render partial: "category", locals: { category: category } %>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>

<footer>
  <div class="btn-section">
    <%= link_to 'add category', new_category_path, class: "btn-add" %>
  </div>
</footer>