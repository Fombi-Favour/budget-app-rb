<section class="main-form">
  <%= form_with model: @expense, local: true do |f| %>
    <nav>
      <%= link_to :back do %>
        <%= image_tag("left-arrow.svg") %>
      <% end %>
      <p>new expense</p>
      <%= f.submit "Create", class: "btn-submit" %>
    </nav>

    <div class="form-section">
      <div class="form-input">
        <%= f.text_field :name, placeholder: "Expense name", autocomplete: true, class: "input-field", required: true %>
        <%= f.number_field :amount, placeholder: "Amount", class: "input-field", required: true %>
        <div class="select-field">
          <%= f.label :category %>
          <%= f.collection_select(:category_ids, current_user.categories, :id, :name, { prompt: true }, { multiple: true, required: true }) %>
        </div>
      </div>
    </div>
  <% end %>
</section>